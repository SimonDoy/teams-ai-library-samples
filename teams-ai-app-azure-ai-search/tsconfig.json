{
    "compilerOptions": {
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "module": "commonjs",
        "outDir": "./lib",
        "rootDir": "./src",
        "sourceMap": true,
        "strict": true,
        "target": "ES2017",
        "tsBuildInfoFile": "./lib/.tsbuildinfo",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["./src/**/*"],
}
